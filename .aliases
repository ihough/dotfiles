#!/usr/bin/env bash

# Based on https://github.com/mathiasbynens/dotfiles/blob/main/.aliases

#
# CIMENT
#

# Display node cores / memory / storage
alias info="cat /etc/motd"

#
# Navigation
#

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias -- -='cd -'

# Shortcuts
alias projects='cd ~/projects'

#
# Colour output
#

# Detect which `ls` flavor is in use
if ls --help > /dev/null 2>&1; then # GNU `ls`
  # Default dircolors of Ubuntu
  export LS_COLORS='rs=0:di=01;34:ln=01;36:mh=00:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:mi=00:su=37;41:sg=30;43:ca=30;41:tw=30;42:ow=34;42:st=37;44:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arc=01;31:*.arj=01;31:*.taz=01;31:*.lha=01;31:*.lz4=01;31:*.lzh=01;31:*.lzma=01;31:*.tlz=01;31:*.txz=01;31:*.tzo=01;31:*.t7z=01;31:*.zip=01;31:*.z=01;31:*.dz=01;31:*.gz=01;31:*.lrz=01;31:*.lz=01;31:*.lzo=01;31:*.xz=01;31:*.zst=01;31:*.tzst=01;31:*.bz2=01;31:*.bz=01;31:*.tbz=01;31:*.tbz2=01;31:*.tz=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.war=01;31:*.ear=01;31:*.sar=01;31:*.rar=01;31:*.alz=01;31:*.ace=01;31:*.zoo=01;31:*.cpio=01;31:*.7z=01;31:*.rz=01;31:*.cab=01;31:*.wim=01;31:*.swm=01;31:*.dwm=01;31:*.esd=01;31:*.jpg=01;35:*.jpeg=01;35:*.mjpg=01;35:*.mjpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.svg=01;35:*.svgz=01;35:*.mng=01;35:*.pcx=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.m2v=01;35:*.mkv=01;35:*.webm=01;35:*.webp=01;35:*.ogm=01;35:*.mp4=01;35:*.m4v=01;35:*.mp4v=01;35:*.vob=01;35:*.qt=01;35:*.nuv=01;35:*.wmv=01;35:*.asf=01;35:*.rm=01;35:*.rmvb=01;35:*.flc=01;35:*.avi=01;35:*.fli=01;35:*.flv=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.yuv=01;35:*.cgm=01;35:*.emf=01;35:*.ogv=01;35:*.ogx=01;35:*.aac=00;36:*.au=00;36:*.flac=00;36:*.m4a=00;36:*.mid=00;36:*.midi=00;36:*.mka=00;36:*.mp3=00;36:*.mpc=00;36:*.ogg=00;36:*.ra=00;36:*.wav=00;36:*.oga=00;36:*.opus=00;36:*.spx=00;36:*.xspf=00;36:'
else # macOS `ls`
  export LSCOLORS='ExGxFxdaCxDaDahbadacec'
fi

# Always use color output for `ls`
alias ls='command ls --color=auto'

# Always use color output for `dir` and `vdir`
alias dir='command dir --color=auto'
alias vdir='command vdir --color=auto'

# Always enable colored `grep` output
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

#
# ls
#

# List all files colorized in long format, directories first
alias l='ls -lFh --group-directories-first'

# List all files colorized in long format, excluding . and .., directories first
alias la='ls -lAFh --group-directories-first'
alias ll='ls -lAFh --group-directories-first'

# List only directories in current dir
alias ld="ls -lFh | grep --color=never '^d'"

# List only hidden files in current dir, directories first
alias lh='ls -lFhd --group-directories-first .?*'

#
# Safety - prompt before overwriting / removing files
#

alias cpi='cp -i'
alias lni='ln -i'
alias mvi='mv -i'
alias rmi='rm -i'

#
# rsync
#

alias rsync-copy='rsync -avzi --progress -h'
alias rsync-move='rsync -avzi --progress -h --remove-source-files'
alias rsync-synchronize='rsync -avziu --delete --progress -h'
alias rsync-update='rsync -avziu --progress -h'

#
# Git
# See also aliases in ~/.gitconfig

alias g=git

# Use git diff everywhere
alias diff='command git diff --color --color-moved --no-ext-diff --no-index'

# Git diff showing per-word difference (rather than per-line)
alias diff-cw='command git diff --color --color-moved --color-words --no-ext-diff --no-index'

#
# tmux
#

# Fix ssh agent forwarding after reconnecting to a tmux session by updating SSH_AUTH_SOCK
alias tmux-fix-ssh='eval $(tmux showenv -s SSH_AUTH_SOCK)'

#
# Misc
#

# Programs
alias mm=micromamba
alias python=python3
alias pip=pip3

# Trim new lines and copy to clipboard
alias c="tr -d '\n' | pbcopy"

# URL-encode strings
alias urlencode="python -c 'import sys, urllib.parse as ul; print(ul.quote_plus(sys.argv[1]));'"
alias urldecode="python -c 'import sys, urllib.parse as ul; print(ul.unquote_plus(sys.argv[1]));'"

# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map='xargs -n1'

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec ${SHELL} -l"

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'
